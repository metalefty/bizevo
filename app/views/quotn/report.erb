<div class="ui comments">
    <% @reports.each do |r| %>
        <div class="comment">
            <a class="avatar">
                <img src="/images/noimage.png">
            </a>
            <div class="content">
                <a class="author"><%= Personal.find_by(:psnal_cd => r.report_psnal_cd).nm %></a>
                <div class="metadata">
                    <div class="date"><%= time_ago_in_words r.updated_at %></div>
                </div>
                <div style="float: right;">
                    <a><i class="icon edit"></i></a>
                </div>
                <div class="text">
                    <%= simple_format(h(r.report)) %>
                </div>
            </div>
        </div>
    <% end %>
</div>