<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <script src="https://code.jquery.com/jquery-2.1.1.js"></script>
  <%= stylesheet_link_tag 'semantic', 'kiita', 'github', 'select2/select2' %>
  <%= javascript_include_tag 'semantic' %>
</head>
<body class="background">
  <div>
    <section class="layout_column">
      <div class="ui vertical labeled icon menu">
        <% link_to url(:index), {class: "teal item"} do %>
          <i class="dashboard icon"></i>
          dashboard
        <% end %>
        <% link_to url(:kiita, :index), {class: "teal item"} do %>
          <i class="home icon"></i>
          kiita top
        <% end %>
        <% link_to url(:kiita, :new), {class: "teal item"} do %>
          <i class="add icon"></i>
          new post
        <% end %>
        <% link_to url(:kiita, :mypage), {class: "teal item"} do %>
          <i class="child icon"></i>
          my page
        <% end %>
      </div>
    </section>
    <section class="include layout_column column8">
      <%= yield %>
    </section>
  </div>
</body>
