<div class="info">
  <%= flash_tag :info, :class => "ui blue message" %>
</div>
<div class="success">
  <%= flash_tag :success, :class => "ui green message" %>
</div>

<% unless @articles.empty? %>
<% @articles.each do |at| %>
<div class="ui feed">
  <div class="event">
    <div class="label">
      <i class="pencil icon"></i>
    </div>
    <div class="content">
      <div class="summary">
        <img src="<%= at.user.get_thumbnail_path %>" />
        <% link_to url(:kiita, :view, at.id) do %>
          <%= at.title %>
        <% end %>
        <div class="date">
          <%= at.get_created_at_ago %> days ago
        </div>
      </div>
      <div class="extra text">
        <i class="tags icon"></i>
        <% if at.article_tags.present? %>
          <% at.article_tags.each do |tag| %>
            <% link_to url(:kiita, :tag, tag.tag) do %>
              <div id="tag" class="ui label">
                <%= tag.tag %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="meta">
        <a class="like">
          <i class="like icon"></i> <%= at.likes %> Likes
        </a>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>

<section class="pager">
  <%= paginate @articles %>
</section>
